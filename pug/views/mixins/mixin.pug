    img(src= title, alt="title").explore-bottom-box-top 
    span.explore-bottom-box-bottom= span
mixin playlist(img, heading, date, title)
  .play-list-bottom-contain  
    .playlist-bottom-box
      .playlist-bottom-img
        img(src= img, alt="image")
      .playlist-bottom-content 
        .playlist-bottom-content-top
          .playlist-bottom-content-top-heading= heading
          span.playlist-bottom-content-top-date= date
        .playlist-bottom-content-mid= title 
        .playlist-bottom-content-bot
          .bot-1 
            img(src=".././images/playlist/1.png", alt="image")
          .bot-2  
            img(src=".././images/playlist/2.png", alt="image")
          .bot-3 
            img(src=".././images/playlist/3.png", alt="image")
          .bot-4 41+
